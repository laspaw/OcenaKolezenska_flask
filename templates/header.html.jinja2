{% block header %}
    <table style="border: 0px solid black;width: 100%;height: 100%;margin-left: auto;margin-right: auto;">
        <tr>
            <td>
                {% if current_user.is_authenticated %}
                    Witaj {{ current_user.email }}
                {% endif %}
            </td>
            <td>
                {% if current_user.is_authenticated %}
                    <div style="text-align: right;"><a href="/logout" >Wyloguj</a></div>
                {% else %}
                    <div style="text-align: right;"><a href="/login" >Zaloguj</a></div>
                {% endif %}
            </td>
        </tr>
    </table>
{% endblock %}